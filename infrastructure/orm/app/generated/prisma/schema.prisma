generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:../../database/db.sqlite"
}

enum TypeTransaction {
  REVENU
  DEPENSE
}

model CategorieTransaction {
  id           Int           @id @default(autoincrement())
  nom          String        @unique
  transactions Transaction[]
}

model Transaction {
  id          Int                  @id @default(autoincrement())
  type        TypeTransaction
  montant     Float
  date        DateTime
  categorieId Int
  categorie   CategorieTransaction @relation(fields: [categorieId], references: [id])
}

model Compte {
  id      Int    @id @default(autoincrement())
  nom     String
  montant Float
}

model Cryptomonnaie {
  id       Int     @id @default(autoincrement())
  ticker   String
  nom      String
  quantite Float
  stacking Boolean
}

model Action {
  id       Int    @id @default(autoincrement())
  ticker   String
  nom      String
  quantite Float
}

model Sauvegarde {
  id          Int      @id @default(autoincrement())
  date        DateTime
  totalCompte Float
  totalCrypto Float
  totalBourse Float
}
